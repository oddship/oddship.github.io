---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The Oddship - We rebuild ourselves at sea" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav>
      <a href="/" aria-current={currentPath === "/" ? "page" : undefined}>home</a>
      <a href="/manifesto" aria-current={currentPath === "/manifesto" ? "page" : undefined}>manifesto</a>
      <a href="/about" aria-current={currentPath === "/about" ? "page" : undefined}>about</a>
    </nav>

    <main class="content">
      <slot />
    </main>

    <footer>
      oddship.net
    </footer>
  </body>
</html>
